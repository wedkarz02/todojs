<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../../partials/head"); %>
</head>
<body>
    <h1>View TODO</h1>
    <ol>
        <li><a href="/dashboard">Dashboard</a></li>
        <li><%= todo.title %></li>
        <li class="todo-body"><%= todo.body %></li>
    </ol>
    <form action="/dashboard/item-delete/<%= todoId %>?_method=DELETE" method="POST">
        <button type="submit">Delete</button>
    </form>

    <form action="/dashboard/item/<%= todoId %>?_method=PUT" method="POST">
        <input type="text" name="title" id="title" value="<%= todo.title %>" placeholder="Title">
        <textarea name="body" id="body" placeholder="Write something..." rows="12"><%= todo.body %></textarea>
        <button type="submit">Update</button>
    </form>

    <%- include("../../partials/footer") %>
</body>
</html>